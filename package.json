{
  "name": "nuxt-simple-stories",
  "type": "module",
  "version": "0.0.5",
  "description": "Simple module to work on components on a blank canvas.",
  "license": "MIT",
  "repository": "https://github.com/grmnn/nuxt-simple-stories",
  "exports": {
    ".": {
      "types": "./dist/types.d.ts",
      "require": "./dist/module.cjs",
      "import": "./dist/module.mjs"
    }
  },
  "main": "./dist/module.cjs",
  "types": "./dist/types.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "lint": "eslint .",
    "prepack": "tailwindcss -i ./src/tailwind.css -o ./src/runtime/prod.css && nuxt-module-build",
    "release": "pnpm run lint && pnpm run prepack && changelogen --release && pnpm publish && git push --follow-tags",
    "dev:tailwind": "NUXT_MODULE_ENV=development tailwindcss -i ./src/tailwind.css -o ./src/dev.css",
    "dev:serve": "nuxi preview playground",
    "dev:prepare": "nuxt-module-build --stub && nuxi prepare playground",
    "dev:generate": "pnpm run dev:tailwind && NUXT_MODULE_ENV=development nuxi generate playground",
    "dev": "concurrently --kill-others \"pnpm run dev:tailwind --watch\" \"NUXT_MODULE_ENV=development nuxi dev playground\""
  },
  "dependencies": {
    "@nuxt/kit": "^3.5.3"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.39.5",
    "@nuxt/module-builder": "^0.4.0",
    "@nuxt/schema": "^3.5.3",
    "@nuxt/test-utils": "^3.5.3",
    "@types/node": "^20.2.5",
    "changelogen": "^0.5.3",
    "concurrently": "^8.1.0",
    "eslint": "^8.42.0",
    "nuxt": "^3.5.3",
    "tailwindcss": "^3.3.2",
    "typescript": "5.0.4"
  }
}
